<div class="{{grid}}">
{{!-- #####################[ Card Image code starts ]###################### --}}
    <div class="takui-card--carousel-item">
        {{#backgroundImageSet}}
            {{>atoms-dynamic-image}}
        {{/backgroundImageSet}}
        <div class="takui-card-data">
            <div class="takui-card-info top">
                {{>molecules-icon-with-date-data-rounded-light-bg}}
            </div>
            <div class="takui-card-title">
                {{{ cardTitleText }}}
            </div>
            <div class="takui-card-desc">
                {{{ cardExcerptText }}}
            </div>
            {{#if actionArea }}
            <div class="takui-action-area">
                <div class="takui-action-btn">
                    {{> atoms-anchor-button }}
                </div>
            </div>
            {{/if }}
        </div>
    </div>
{{!-- #####################[ Card Image code ends ]###################### --}}
</div>